@using CvApp.Models.DTO;

@model List<EducationDTO>

@{
    ViewData["Title"] = "List";
}
<partial name="Partials/ViewMessages" />


<div>
    <a class="btn btn-primary flex-grow-1 ms-auto" asp-controller="Education" asp-action="Create">Eğitim Ekle</a>
</div>




<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Kurum Adı</th>
            <th scope="col">Fakülte</th>
            <th scope="col">Bölüm</th>
            <th scope="col">Öğrenim Tipi</th>
            <th scope="col">Dil</th>
            <th scope="col">Diploma Notu</th>
            <th scope="col">Başlama Tarihi</th>
            <th scope="col">Bitiş Tarihi</th>
            <th scope="col">İşlemler</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.EducationId</th>
                <td>@item.UniversityName</td>
                <td>@item.FacultyName</td>
                <td>@item.Department</td>
                <td>@item.EducationType</td>
                <td>@item.EducationLanguage</td>
                <td>@item.DegreeNote</td>
                <td>@item.StartedTime</td>
                <td>@item.EndTime</td>
                <td>
                    <a class="btn btn-success" asp-action="Details" asp-route-id="@item.EducationId" asp-controller="Education">Detaylar</a>
                    <a class="btn btn-info" asp-action="Update" asp-route-id="@item.EducationId" asp-controller="Education">Düzenle</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.EducationId" asp-controller="Education">Sil</a>
                    <a asp-action="DownloadFile" asp-controller="Education" asp-route-fileName="@item.fileName"> İndir</a>

                </td>
            </tr>
        }
    </tbody>
</table>