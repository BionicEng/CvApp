@using CvApp.Models.DTO;
@model EducationDTO

@{
    ViewData["Title"] = "Create";
}

<h4>Eğitim Bilgisi Düzenle</h4>
<partial name="Partials/ViewMessages" />

<div class="row">
    <div class="col-md-6">

        <form asp-action="Update" asp-controller="Education" method="post" enctype="multipart/form-data">

            <div class="form-group mt-2">
                <label asp-for="EducationType" class="control-label">Öğrenim Tipi :</label>
                <input asp-for="EducationType" class="form-control" />
                <span asp-validation-for="EducationType" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="UniversityName" class="control-label">Kurum Adı: :</label>
                <input asp-for="UniversityName" class="form-control" />
                <span asp-validation-for="UniversityName" class="text-danger"></span>
            </div>

            <div class="form-group mt-2">
                <label asp-for="FacultyName" class="control-label">Fakülte (Varsa) :</label>
                <input asp-for="FacultyName" class="form-control" />
                <span asp-validation-for="FacultyName" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Department" class="control-label">Bölüm (Varsa) :</label>
                <input asp-for="Department" class="form-control" />
                <span asp-validation-for="Department" class="text-danger"></span>
            </div>

            <div class="form-group mt-2">
                <label asp-for="EducationDescription" class="control-label">Açıklama :</label>
                <textarea asp-for="EducationDescription" class="form-control"></textarea>
                <span asp-validation-for="EducationDescription" class="text-danger"></span>
            </div>


            <div class="form-group mt-2">
                <label asp-for="EducationLanguage" class="control-label">Eğitim Dili :</label>
                <input asp-for="EducationLanguage" class="form-control" />
                <span asp-validation-for="EducationLanguage" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="DegreeNote" class="control-label">Diploma Notu :</label>
                <input asp-for="DegreeNote" class="form-control" />
                <span asp-validation-for="DegreeNote" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="StartedTime" class="control-label">Başlangıç Tarihi :</label>
                <input asp-for="StartedTime" type="date" class="form-control" />
                <span asp-validation-for="StartedTime" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="EndTime" class="control-label">Mezuniyet Tarihi :</label>
                <input asp-for="EndTime" type="date" class="form-control" />
                <span asp-validation-for="EndTime" class="text-danger"></span>
            </div>
            <div>
                <div class="form-group mt-2">
                    <label for="formFile">Resim :</label>
                    <input type="file" class="form-control" id="formFile" name="formFile" />
                </div>
            </div>

            <div class="form-group mt-2">
                <input type="submit" class="btn btn-primary"  <i class="fa-solid fa-xmark"></i>

                <a asp-action="List" class="btn btn-secondary">Listeye Dön</a>
            </div>
        </form>
        @section Scripts
            {
            <script>

            </script>
        }



    </div>
</div>
