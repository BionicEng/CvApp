@using CvApp.Models.DTO.CvApp.Data.Entities;

@model CertificateDTO

@{
    ViewData["Title"] = "Create";
}

<h4>Sertifika Ekle</h4>
<partial name="Partials/ViewMessages" />

<div class="row">
    <div class="col-md-6">

        <form asp-action="Create" asp-controller="Certificate" method="post" enctype="multipart/form-data">

            <div class="form-group mt-2">
                <label asp-for="CertificateName" class="control-label">Sertifika Adı :</label>
                <input asp-for="CertificateName" class="form-control" />
                <span asp-validation-for="CertificateName" class="text-danger"></span>
            </div>

            <div class="form-group mt-2">
                <label asp-for="CertificateDescription" class="control-label">Açıklama :</label>
                <textarea asp-for="CertificateDescription" class="form-control"></textarea>
                <span asp-validation-for="CertificateDescription" class="text-danger"></span>
            </div>

            <div class="form-group mt-2">
                <label asp-for="CertificateCompany" class="control-label">Alınan Kurum :</label>
                <input asp-for="CertificateCompany" class="form-control" />
                <span asp-validation-for="CertificateCompany" class="text-danger"></span>
            </div>

            <div class="form-group mt-2">
                <label asp-for="CertificateDate" class="control-label">Sertifika Tarihi :</label>
                <input asp-for="CertificateDate" type="date" class="form-control" />
                <span asp-validation-for="CertificateDate" class="text-danger"></span>
            </div>
            <div>
                <div class="form-group mt-2">
                    <label for="formFile">Sertifika Dosyası :</label>
                    <input type="file" class="form-control" id="formFile" name="formFile" />
                </div>
            </div>

            <div class="form-group mt-2">
                <input type="submit" class="btn btn-primary"  <i class="fa-solid fa-xmark"></i> 

                <a asp-action="List" class="btn btn-secondary">Listeye Dön</a>
            </div>
        </form>
        @section Scripts
        {
            <script>

            </script>
        }
       


    </div>
</div>
