@using CvApp.Models.DTO;

@model KnownProgramDTO

@{
    ViewData["Title"] = "Create";
}

<h4>Program Bilgisi Düzenle</h4>
<partial name="Partials/ViewMessages" />

<div class="row">


    <form asp-action="Update" asp-controller="JobInformation" method="post" enctype="multipart/form-data">
        <div class="col-md-6">

            <div class="form-group mt-2">
                <label asp-for="ProgramName" class="control-label">Program Adı :</label>
                <input asp-for="ProgramName" class="form-control" />
                <span asp-validation-for="ProgramName" class="text-danger"></span>
            </div>

            <div class="form-group mt-2">
                <label asp-for="ProgramDescription" class="control-label">Açıklama :</label>
                <textarea asp-for="ProgramDescription" class="form-control"></textarea>
                <span asp-validation-for="ProgramDescription" class="text-danger"></span>
            </div>
            <div class="form-field col-lg-6 ">
                <input asp-for=programStock class="input-text js-input"></>
                <label class="label" asp-for="programStock"> Yüzde:</label>

            </div>
        </div> <!-- İlk sütun sonu -->
        <div class="col-md-6">
            <div class="form-group mt-2">
                <label for="formFile">Sertifika Dosyası :</label>
                <input type="file" class="form-control" id="formFile" name="formFile" />
            </div>

            <div class="form-group mt-2">
                <input type="submit" class="btn btn-primary" value="Kaydet" />
                <a asp-action="List" class="btn btn-secondary">Listeye Dön</a>
            </div>

        </div> <!-- Üçüncü sütun sonu -->

    </form>

</div>