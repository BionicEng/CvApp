    ======================================================== -->
</head>

<body>

    <!-- ======= Mobile nav toggle button ======= -->
    <!-- <button type="button" class="mobile-nav-toggle d-xl-none"><i class="bi bi-list mobile-nav-toggle"></i></button> -->
    <i class="bi bi-list mobile-nav-toggle d-lg-none"></i>
    <!-- ======= Header ======= -->
    <header id="header" class="d-flex flex-column justify-content-center">

        <nav id="navbar" class="navbar nav-menu">
            <ul>
                @if(!User.Identity.IsAuthenticated)
                {
                    <li><a href="#hero" class="nav-link scrollto active"><i class="bx bx-home"></i> <span>Home</span></a></li>
                    <li><a href="#about" class="nav-link scrollto"><i class="bx bx-user"></i> <span>About</span></a></li>
                    <li><a href="#resume" class="nav-link scrollto"><i class="bx bx-file-blank"></i> <span>Resume</span></a></li>
                    <li><a href="#portfolio" class="nav-link scrollto"><i class="bx bx-book-content"></i> <span>Portfolio</span></a></li>
                    <li><a href="#services" class="nav-link scrollto"><i class="bx bx-server"></i> <span>Services</span></a></li>
                    <li><a href="#contact" class="nav-link scrollto"><i class="bx bx-envelope"></i> <span>Contact</span></a></li>

                }
                else
                {
                    <li><a asp-controller="Home" asp-action="Index" class="nav-link scrollto active"><i class="bx bx-home"></i> <span>Home</span></a></li>
                    <li><a asp-controller="User" asp-action="List" class="nav-link scrollto"><i class="bx bx-user"></i> <span>User</span></a></li>
                    <li><a asp-controller="Education" asp-action="List" class="nav-link scrollto"><i class="bx bx-file-blank"></i> <span>Education</span></a></li>
                    <li><a asp-controller="JobInformation" asp-action="List" class="nav-link scrollto"><i class="bx bx-book-content"></i> <span>JobInformation</span></a></li>
                    <li><a asp-controller="Certificate" asp-action="List" class="nav-link scrollto"><i class="bx bx-server"></i> <span>Certificate</span></a></li>
                    <li><a asp-controller="KnownProgram" asp-action="List" class="nav-link scrollto"><i class="bx bx-envelope"></i> <span>KnownProgram</span></a></li>
                    <li><a asp-controller="Language" asp-action="List" class="nav-link scrollto active"><i class="bx bx-home"></i> <span>Language</span></a></li>
                    <li><a asp-controller="Referance" asp-action="List" class="nav-link scrollto"><i class="bx bx-user"></i> <span>Referance</span></a></li>
                    <li><a asp-controller="Service" asp-action="List" class="nav-link scrollto"><i class="bx bx-file-blank"></i> <span>Service</span></a></li>
                    <li><a asp-controller="Message" asp-action="List" class="nav-link scrollto"><i class="bx bx-book-content"></i> <span>Message</span></a></li>
                    <li><a asp-controller="Certificate" asp-action="List" class="nav-link scrollto"><i class="bx bx-server"></i> <span>Certificate</span></a></li>
                    <li><a asp-controller="Fact" asp-action="List" class="nav-link scrollto"><i class="bx bx-envelope"></i> <span>Fact</span></a></li>
                }

            </ul>
        </nav>

    </header>
    @await Component.InvokeAsync("HeroComponent")


    <main id="main">

        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

    </main>
    @await Component.InvokeAsync("FooterComponent")
<!-- End Footer -->

    <div id="preloader"></div>
    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Vendor JS Files -->
    <script src="~/vendor/purecounter/purecounter_vanilla.js"></script>
    <script src="~/vendor/aos/aos.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="~/vendor/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="~/vendor/swiper/swiper-bundle.min.js"></script>
    <script src="~/vendor/typed.js/typed.umd.js"></script>
    <script src="~/vendor/waypoints/noframework.waypoints.js"></script>
    <script src="~/vendor/php-email-form/validate.js"></script>

    <!-- Template Main JS File -->
    <script src="~/js/main.js"></script>

</body>

</html>