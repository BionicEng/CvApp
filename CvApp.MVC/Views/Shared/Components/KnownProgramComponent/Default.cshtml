@using CvApp.Models.DTO;

@model List<KnownProgramDTO>
<section id="skills" class="skills section-bg">
    <div class="container" data-aos="fade-up">

        <div class="section-title">
            <h2>Yetenekler</h2>
            <p> Profesyonel iş alanında kullanabileceğim yetkinliklerim:  </p>
        </div>

        <div class="row skills-content">

            <div class="col-lg-6">
                @for (int i = 0; i < Model.Count / 2; i++)
                {
                    <div class="progress">
                        <span class="skill">@Model[i].ProgramName <i class="val">@Model[i].programStock%</i></span>
                        <div class="progress-bar-wrap">
                            <div class="progress-bar" role="progressbar" aria-valuenow="@Model[i].programStock" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>

                }

            </div>

            <div class="col-lg-6">
                @for (int i = Model.Count / 2; i < Model.Count; i++)
                {
                    <div class="progress">
                        <span class="skill">@Model[i].ProgramName <i class="val">@Model[i].programStock%</i></span>
                        <div class="progress-bar-wrap">
                            <div class="progress-bar" role="progressbar" aria-valuenow="@Model[i].programStock" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>

                }

            </div>

        </div>

    </div>
</section><!-- End Skills Section -->