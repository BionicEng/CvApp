@using CvApp.Models.DTO.CvApp.Data.Entities;
@model List<CertificateDTO>

<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Sertifika Adı</th>
            <th scope="col">Kurum</th>
            <th scope="col">Tarih</th>
            <th scope="col">Dosya Adı</th>
            <th scope="col">İşlemler</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.CertificateId</th>
                <td>@item.CertificateName</td>
                <td>@item.CertificateCompany</td>
                <td>@item.CertificateDate</td>
                <td>@item.fileName</td>
                <td>
                    <a class="btn btn-success" asp-action="Details" asp-route-id="@item.CertificateId" asp-controller="Certificate">Detaylar</a>
                    <a class="btn btn-info" asp-action="Update" asp-route-id="@item.CertificateId" asp-controller="Certificate">Düzenle</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.CertificateId" asp-controller="Certificate">Sil</a>
                    <a asp-action="DownloadFile" asp-controller="Certificate" asp-route-fileName="@item.fileName"> İndir</a>

                </td>
            </tr>
        }
    </tbody>
</table>