@using CvApp.Models.DTO;
@model MessageDTO

@if (User.Identity.IsAuthenticated)
{
    <div class="col-lg-8 mt-5 mt-lg-0">

        <form asp-action="Create" asp-controller="Message" method="post">
            <div class="row">
                <div class="col-md-6 form-group">
                    <input asp-for="SenderName" class="form-control" id="name" placeholder="İsim">
                </div>
                <div class="col-md-6 form-group mt-3 mt-md-0">
                    <input asp-for="SenderEmail" class="form-control" id="email" placeholder="Email">
                </div>
            </div>
            <div class="form-group mt-3">
                <input class="form-control" asp-for="SenderSubject" id="subject" placeholder="Subject">
            </div>
            <div class="form-group mt-3">
                <textarea asp-for="SenderMessage" class="form-control" rows="5" placeholder="Mesajınız"></textarea>
            </div>
            <input type="submit" class="btn btn-primary" value="Kaydet" />
        </form>

    </div>
}

