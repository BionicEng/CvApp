@using CvApp.Models.DTO;
@model List< FactDTO>

@{
    ViewData["Title"] = "List";
}
<partial name="Partials/ViewMessages" />


<div>
    <a class="btn btn-primary flex-grow-1 ms-auto" asp-controller="Fact" asp-action="Create">İstatistik Ekle</a>
</div>




<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Özellik </th>
            <th scope="col">Adet</th>
            <th scope="col">Açıklama</th>
            <th scope="col">İşlemler</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.PropertyName</td>
                <td>@item.PropertyStock</td>
                <td>@item.Description</td>
                <td>
                    <a class="btn btn-success" asp-action="Details" asp-route-id="@item.Id" asp-controller="Fact">Detaylar</a>
                    <a class="btn btn-info" asp-action="Update" asp-route-id="@item.Id" asp-controller="Fact">Düzenle</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id" asp-controller="Fact">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>