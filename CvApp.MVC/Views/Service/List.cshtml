
@using CvApp.Models.DTO;
@model List<ServiceDTO>

@{
    ViewData["Title"] = "List";
}
<partial name="Partials/ViewMessages" />


<div>
    <a class="btn btn-primary flex-grow-1 ms-auto" asp-controller="Service" asp-action="Create">Servis Ekle</a>
</div>

    


<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Servis Adı</th>
            <th scope="col">Açıklama</th>
            <th scope="col">Dosya Adı</th>
            <th scope="col">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.fileName</td>
                <td>
                    <a class="btn btn-success" asp-action="Details" asp-route-id="@item.Id" asp-controller="Service">Detaylar</a>
                    <a class="btn btn-info" asp-action="Update" asp-route-id="@item.Id" asp-controller="Service">Düzenle</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id" asp-controller="Service">Sil</a>
                    <a asp-action="DownloadFile" asp-controller="Service" asp-route-fileName="@item.fileName"> İndir</a>
                   
                </td>
            </tr>
        }      
    </tbody>
</table>